{
    "manifest_version": 3,
    "name": "ADHUMAN",
    "version": "1.0",
    "description": "A Framework for Human-in-the-Loop Self-Adaptation",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "permissions": [
        "scripting" 
    ],
    "host_permissions": [
        "*://*/*" 
    ],
    
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [       
            "Adhuman.js"         
        ],
            "run_at": "document_idle" 
        }
    ]
}